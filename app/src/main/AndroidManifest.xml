<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pycontw.ccip">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="org.pycontw.ccip.application.CCIPApplicaion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.pycontw.ccip.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ccip.pycon.tw"
                    android:scheme="http" />
                <data
                    android:host="ccip.pycon.tw"
                    android:scheme="https" />
                <data
                    android:host="login"
                    android:scheme="ccip" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.pycontw.ccip.activity.CountdownActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.pycontw.ccip.activity.SubmissionDetailActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />
        <receiver android:name="org.pycontw.ccip.util.SubmissionAlarmReceiver" />
        <receiver android:name="org.pycontw.ccip.util.RebootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
